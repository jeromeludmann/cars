{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "pretty": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@front/*": ["front/*"],
      "@rest/*": ["back/rest/*"],
      "@graphql/*": ["back/graphql/*"],
      "@ssr/*": ["back/ssr/*"],
      "@common/*": ["back/common/*"]
    }
  },
  "include": ["src"]
}
