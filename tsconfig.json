{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "pretty": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@front/*": ["front/*"],
      "@back/*": ["back/*"],
      "@api/*": ["back/api/*"],
      "@ssr/*": ["back/ssr/*"]
    }
  },
  "include": ["src"]
}
